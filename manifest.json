{
  "manifest_version": 2,
  "name": "Send-to-Discord",
  "version": "1.0",
  "description": "Click to send the link of the opened page into your Discord servers",
  "homepage_url": "https://github.com/usagiga/Send-to-Discord",
  "browser_specific_settings": {
    "gecko": {
      "id": "me.usagiga.send-to-discord"
    }
  },
  "icons": {
    "48": "assets/icon/Discord-Logo-Color.svg",
    "96": "assets/icon/Discord-Logo-Color.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "match_about_blank": false,
      "js": [
        "sendToDiscord.js"
      ]
    }
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "assets/icon/Discord-Logo-Color.svg",
      "38": "assets/icon/Discord-Logo-Color.svg"
    },
    "default_title": "Send to Discord",
    "default_popup": "pages/list.html",
    "show_matches": [
      "*://*/*"
    ]
  },
  "permissions": [
    "https://discord.com/api/webhooks/*",
    "activeTab",
    "storage"
  ]
}
